{
  "manifest_version": 3,
  "name": "SafePaste",
  "version": "1.0",
  "description": "Detect and prevent accidental data leaks to AI tools.",
  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "settings.html",
  "icons": {
    "128": "icons/icon128.png"
  }
}
